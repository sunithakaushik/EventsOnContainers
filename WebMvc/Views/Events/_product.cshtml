@model WebMvc.Models.Events
    <form asp-controller="Cart" asp-action="AddToCart">
        <img class="esh-catalog-thumbnail" src="@Model.ImageUrl" />
        <input class="esh-catalog-button" type="submit" value="[ ADD TO CART ]" />
        <div class="esh-catalog-name">
            <span>@Model.Title</span>
        </div>
        <div class="esh-catalog-label">
            <span>@Model.Location</span>
        </div>
        <div class="esh-catalog-label">
            <span>@Model.StartDate</span>
        </div>
        <div class="esh-catalog-price">
            <span>@Model.Price.ToString("N2")</span>
        </div>
        <input type="hidden" asp-for="@Model.EventTopic" name="topic" />
        <input type="hidden" asp-for="@Model.EventTopicId" name="topicId" />
        <input type="hidden" asp-for="@Model.EventType" name="type" />
        <input type="hidden" asp-for="@Model.EventTypeId" name="typeId" />
        <input type="hidden" asp-for="@Model.Description" name="description" />
        <input type="hidden" asp-for="@Model.Id" name="id" />
        <input type="hidden" asp-for="@Model.Title" name="title" />
        <input type="hidden" asp-for="@Model.Location" name="location" />
        <input type="hidden" asp-for="@Model.ImageUrl" name="imageUrl" />
        <input type="hidden" asp-for="@Model.Price" name="price" />
    </form>